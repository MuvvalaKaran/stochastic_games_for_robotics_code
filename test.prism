module plr1
    c :[0..1] init 0;
    t :[0..1] init 0;
    [a1] (c=0) & (t=0) -> (c'=0) & (t'=0);
    [a2] (c=0) & (t=0) -> (c'=1) & (t'=0);
    [a3] (c=0) & (t=0) -> (c'=0) & (t'=1);
    [a4] (c=0) & (t=0) -> (c'=1) & (t'=1);
    [a5] (c=1) & (t=0) -> (c'=0) & (t'=0);
    [a6] (c=1) & (t=0) -> (c'=1) & (t'=0);
    [a7] (c=1) & (t=0) -> (c'=0) & (t'=1);
    [a8] (c=1) & (t=0) -> (c'=1) & (t'=1);
    [a9] (t=1) -> (t'=1);
endmodule

module plr2
    hc :[0..1] init 0;
    ht :[0..1] init 0;
    [a21] (hc=0) & (ht=0) -> (hc'=0) & (ht'=0);
    [a22] (hc=0) & (ht=0) -> (hc'=1) & (ht'=0);
    [a23] (hc=0) & (ht=0) -> (hc'=0) & (ht'=1);
    [a24] (hc=0) & (ht=0) -> (hc'=1) & (ht'=1);
    [a25] (hc=1) & (ht=0) -> (hc'=0) & (ht'=0);
    [a26] (hc=1) & (ht=0) -> (hc'=1) & (ht'=0);
    [a27] (hc=1) & (ht=0) -> (hc'=0) & (ht'=1);
    [a28] (hc=1) & (ht=0) -> (hc'=1) & (ht'=1);
    [a29] (ht=1) -> (ht'=1);
endmodule



